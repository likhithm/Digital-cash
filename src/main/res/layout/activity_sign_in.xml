<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:showIn="@layout/activity_sign_in">

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:textColor="#ffff"
        android:textSize="24sp"
        android:textStyle="italic|bold"/>

    <TextView
        android:id="@+id/balanceView"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="22sp"
        android:background="#70ff0000"
        android:backgroundTint="@color/colorPrimary"
        android:textStyle="italic"/>

    <EditText
        android:id="@+id/ssn"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="230dp"
        android:alpha="0.72"
        android:background="#fff"
        android:ems="10"
        android:hint="Enter your 9 digit ID"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="#000"
        android:textColorHint="#000"
        android:textSize="18dp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/amount"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="280dp"
        android:alpha="0.72"
        android:background="#fff"
        android:ems="10"
        android:hint="Enter Amount in $"
        android:inputType="textNoSuggestions"
        android:textAlignment="center"
        android:textColor="#000"
        android:textColorHint="#000"
        android:textSize="18dp"
        android:textStyle="italic"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:layout_marginTop="330dp"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentLeft="true"
        android:text="Keep the Money same\n in all Money orders?"
        android:background="@color/colorPrimary"
        android:backgroundTint="#70ff0000"
        android:textStyle="italic"
        />

    <Button
        android:id="@+id/yes"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="330dp"
        android:background="@color/colorPrimary"
        android:layout_marginLeft="180dp"
        android:text="Yes"
        android:textColor="#ff00"
        android:textSize="18dp"
        android:textStyle="normal" />
    <Button
        android:id="@+id/no"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="80dp"
        android:layout_height="40dp"

        android:layout_alignParentRight="true"
        android:layout_marginTop="330dp"
        android:layout_marginRight="30dp"
        android:background="@color/colorPrimary"

        android:text="No"
        android:textColor="#ff00"
        android:textSize="18dp"
        android:textStyle="normal" />

    <Button
        android:id="@+id/bank"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="180dp"
        android:layout_height="40dp"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="390dp"
        android:background="#0000ff"

        android:text="Send to bank"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:textStyle="normal" />


    <EditText
        android:id="@+id/merchantid"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="450dp"
        android:alpha="0.72"
        android:background="#fff"
        android:ems="10"
        android:hint="Enter Merchant's ID"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="#000"
        android:textColorHint="#000"
        android:textSize="18dp"
        android:textStyle="italic" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:layout_marginTop="520dp"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentLeft="true"
        android:text="Use this Money order\nOnce/Twice?"
        android:background="@color/colorPrimary"
        android:backgroundTint="#70ff0000"
        android:textStyle="italic"
        />


    <Button
        android:id="@+id/once"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="520dp"
        android:background="@color/colorPrimary"
        android:layout_marginLeft="170dp"
        android:text="once"
        android:textColor="#ff00"
        android:textSize="16dp"
        android:textStyle="normal" />
    <Button
        android:id="@+id/twice"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="520dp"
        android:layout_marginLeft="270dp"
        android:background="@color/colorPrimary"
        android:text="twice"
        android:textColor="#ff00"
        android:textSize="16dp"
        android:textStyle="normal" />
    <Button
        android:id="@+id/send"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="160dp"
        android:layout_height="40dp"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="580dp"

        android:background="#0000ff"

        android:text="Send Money Order"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:textStyle="normal" />




</RelativeLayout>





